{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*",
    "package.json",
    "vite.config.ts",
    "buildAssets/builder",
    "src/renderer/locales/*.json"
  ]
}
